@model ICollection<DisplayOrderViewModel>

<h1 class="text-center">All Orders</h1>
<hr class="hr-2 eventures-bg-color" />
<div class="container-fluid">
    <table class="table table-hover">
        <thead>
            <tr class="row">
                <th class="col-md-1">#</th>
                <th class="col-md-4">Event</th>
                <th class="col-md-3">Customer</th>
                <th class="col-md-4">Ordered On</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {

                var index = i + 1;
                var order = Model.ToList()[i];

                <tr class="row">
                    <th class="col-md-1">@index</th>
                    <td class="col-md-4">@order.EventName</td>
                    <td class="col-md-3">@order.Customer</td>
                    <td class="col-md-4">@order.OrderedOn.ToString("dd-MMM-yy HH:mm:ss")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<hr class="hr-2 eventures-bg-color" />